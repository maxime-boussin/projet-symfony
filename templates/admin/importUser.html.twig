{% extends "layout.html.twig" %}
{% block main %}
<div class="offset-lg-3 col-lg-6 col-md-12 offset-md-0">
    <div class="card shadow mb-4 mt-5">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Import</h6>
        </div>
        {{ form_start(importForm) }}
        <div class="card-body">
            {{ form_row(importForm.file) }}
        </div>
        <div class="card-footer d-flex flex-row-reverse">
            <div class="justify-content-center">
                <button class="btn btn-success btn-icon-split m-1">
                            <span class="icon text-white-50">
                                <i class="fas fa-file-upload"></i>
                            </span>
                    <span class="text">Importer</span>
                </button>
            </div>
            <a href="javascript:history.go(-1)" class="btn btn-info btn-icon-split m-1">
                        <span class="icon text-white-50">
                            <i class="fas fa-chevron-circle-left"></i>
                        </span>
                <span class="text">Retour</span>
            </a>
        </div>
        {{ form_end(importForm) }}
    </div>
</div>
        {% endblock %}

        {% block title %}
            Import - {{ parent() }}
        {% endblock %}
