{% extends "layout.html.twig" %}

{% block main %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Détails de l'idée</h1>
    </div>
    <div class="col-lg-12 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">{{ idea.title }}</h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 25rem;" src="{{ asset("images/undraw_Creation_process_ukbh.svg") }}" alt="">
                </div>
                <p>{{ idea.description }}</p>
                <p>
                    <b>Auteur:
                    </b>
                    <a href="{{ path("user_detail", {nickname:idea.author.nickname}) }}">
                    {{ idea.author.name }}</a></p>
                <p>
                    <b>Date de création:
                    </b>
                    {{ idea.dateCreated | date("m/d/Y") }}</p>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Idée -
    {{ parent() }}
{% endblock %}
