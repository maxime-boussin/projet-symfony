{% extends "layout.html.twig" %}

{% block title %}Créer groupe - {{ parent() }}{% endblock %}
{% block main %}

    <div class="offset-lg-3 col-lg-6 col-md-12 offset-md-0">
        <div class="card shadow mb-4 mt-5">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Nouveau groupe privé</h6>
            </div>
            {{ form_start(createPrivateGroupForm) }}
            <div class="card-body">
                <div class="row">
                    <div class="col-10">
                        {{ form_row(createPrivateGroupForm.name) }}
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex flex-row-reverse">
                <button class="btn btn-success btn-icon-split m-1">
                    <span class="icon text-white-50"><i class="fas fa-check"></i></span>
                    <span class="text">Créer</span>
                </button>
                <a href="javascript:history.go(-1)" class="btn btn-info btn-icon-split m-1">
                        <span class="icon text-white-50">
                            <i class="fas fa-chevron-circle-left"></i>
                        </span>
                    <span class="text">Retour</span>
                </a>
            </div>
            {{ form_end(createPrivateGroupForm) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
{% endblock %}