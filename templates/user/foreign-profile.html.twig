{% extends "layout.html.twig" %}

{% block title %}Profile de {{ profile.nickname }} - {{ parent() }}{% endblock %}
{% block main %}
    <div class="offset-lg-3 col-lg-6 col-md-12 offset-md-0">
        <div class="card shadow mb-4 mt-5">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">{{ profile.nickname }}</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-2 text-center">
                        <div><i class="fas fa-address-card"></i></div>
                        <div><i class="fas fa-phone"></i></div>
                        <div><i class="fas fa-at"></i></div>
                        <div><i class="fas fa-city"></i></div>
                    </div>
                    <div class="col-8">
                        <div>{{ profile.firstName }} {{ profile.lastName }}</div>
                        <div>{{ profile.phone }}</div>
                        <div>{{ profile.email }}</div>
                        <div>{{ profile.site.name }}</div>
                    </div>
                    <div class="col-md-2 col-sm-8 offset-sm-2 offset-md-0">
                        <img class="rounded-circle img-fluid" src="{{ asset('uploads/'~(profile.avatarPath == null? 'default.png': profile.avatarPath)) }}">
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex flex-row-reverse">
                <a href="javascript:history.go(-1)" class="btn btn-info btn-icon-split text-white m-1">
                            <span class="icon text-white-50">
                                <i class="fas fa-chevron-circle-left"></i>
                            </span>
                    <span class="text">Retour</span>
                </a>
                <a href="{{ path('app_messenger_new', { user: profile.id })  }}" class="btn btn-warning btn-icon-split text-white m-1">
                            <span class="icon text-white-50">
                                <i class="fas fa-envelope"></i>
                            </span>
                    <span class="text">Contacter</span>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
