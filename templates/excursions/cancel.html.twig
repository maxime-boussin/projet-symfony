{% extends "layout.html.twig" %}

{% block title %}Annulation sortie - {{ parent() }}{% endblock %}
{% block main %}
    <div class="offset-lg-3 col-lg-6 col-md-12 offset-md-0">
        <div class="card shadow mb-4 mt-5">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">{{ excursion.name }}</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-2 text-center">
                        <div><i class="fas fa-calendar"></i></div>
                        <div><i class="fas fa-city"></i></div>
                        <div><i class="fas fa-map-marker-alt"></i></div>
                    </div>
                    <div class="col-10">
                        {{ form_start(cancellationForm) }}
                        <div>{{ excursion.date|format_datetime("medium", "medium", locale="fr") }}</div>
                        <div>{{ excursion.site.name }}</div>
                        <div>{{ excursion.place.city.name }}, {{ excursion.place.address }}</div>
                        <div>{{ form_row(cancellationForm.description) }}</div>
                        <button type="submit" class="btn btn-danger btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-trash"></i>
                            </span>
                            <span class="text">Annuler</span>
                        </button>
                        <a href="{{ path('excursions') }}" class="btn btn-info btn-icon-split text-white">
                            <span class="icon text-white-50">
                                <i class="fas fa-chevron-circle-left"></i>
                            </span>
                            <span class="text">Retour</span>
                        </a>
                    </div>
                    {{ form_end(cancellationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
