{% extends "layout.html.twig" %}

{% block title %}Détail de sortie - {{ parent() }}{% endblock %}
{% block main %}
    <h1>Détails de la sortie</h1>
    <table>
        <tr>
            <td>Intitulé de la sortie :</td>
            <td>{{ excursion.name }}</td>
        </tr>
        <tr>
            <td>Description :</td>
            <td>{{ excursion.description }}</td>
        </tr>
        <tr>
            <td>Site organisateur :</td>
            <td>{{ site.name }}</td>
        </tr>
        <tr>
            <td>Ville où se déroule l'évènement :</td>
            <td>{{ city.name }}</td>
        </tr>
        <tr>
            <td>Rue :</td>
            <td>{{ place.address }}</td>
        </tr>
        <tr>
            <td>Code Postale :</td>
            <td>{{ city.postCode }}</td>
        </tr>
        <tr>
            <td>Date et heure de la sortie :</td>
            <td>{{ excursion.date|format_datetime() }}</td>
        </tr>
        <tr>
            <td>Date limite d'inscription :</td>
            <td>{{ excursion.limitDate|format_datetime() }}</td>
        </tr>
        <tr>
            <td>Nombre de places maximum :</td>
            <td>{{ excursion.participantLimit }}</td>
        </tr>
        <tr>
            <td>Etat de la publication :</td>
            <td>{{ excursion.state }}</td>
        </tr>
    </table>
    <div>
        <a href="{{ path ('app_publish_excursions', { id: excursion.id })}}" class="btn btn-lg btn-primary">Publier</a>
        <a href="{{ path('app_excursions') }}" class="btn btn-lg btn-primary">Retour</a>
    </div>


{% endblock %}
