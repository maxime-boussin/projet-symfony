{% extends "layout.html.twig" %}

{% block title %}Inscription - {{ parent() }}{% endblock %}
{% block main %}
    <div class="offset-lg-3 col-lg-6 col-md-12 offset-md-0">
        <div class="card shadow mb-4 mt-5">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Inscription</h6>
            </div>
            {{ form_start(registrationForm) }}
            <div class="card-body">
                <div class="row pt-2">
                    <div class="col-2 text-center pt-2"><i class="fas fa-address-card"></i></div>
                    <div class="col-5">{{ form_row(registrationForm.firstName) }}</div>
                    <div class="col-5">{{ form_row(registrationForm.lastName) }}</div>
                </div>
                <div class="row">
                    <div class="col-2 text-center pt-2"><i class="fas fa-city"></i></div>
                    <div class="col-10">{{ form_row(registrationForm.site) }}</div>
                </div>
                <div class="row">
                    <div class="col-2 text-center pt-2"><i class="fas fa-user"></i></div>
                    <div class="col-10">{{ form_row(registrationForm.nickname) }}</div>
                </div>
                <div class="row">
                    <div class="col-2 text-center pt-2"><i class="fas fa-at"></i></div>
                    <div class="col-10">{{ form_row(registrationForm.email) }}</div>
                </div>
                <div class="row">
                    <div class="col-2 text-center pt-2"><i class="fas fa-phone"></i></div>
                    <div class="col-10">{{ form_row(registrationForm.phone) }}</div>
                </div>
                <div class="row pt-2">
                    <div class="col-2 text-center pt-2"><i class="fas fa-lock"></i></div>
                    <div class="col-5">{{ form_row(registrationForm.plainPassword.first) }}</div>
                    <div class="col-5">{{ form_row(registrationForm.plainPassword.second) }}</div>
                </div>
            </div>
            <div class="card-footer d-flex flex-row-reverse">
                <button type="submit" class="btn btn-success btn-icon-split m-1">
                        <span class="icon text-white-50">
                            <i class="fas fa-check"></i>
                        </span>
                    <span class="text">Ajouter</span>
                </button>
                <a href="javascript:history.go(-1)" class="btn btn-info btn-icon-split m-1">
                        <span class="icon text-white-50">
                            <i class="fas fa-chevron-circle-left"></i>
                        </span>
                    <span class="text">Retour</span>
                </a>
            </div>
        </div>
        {{ form_end(registrationForm) }}
{% endblock %}