{% if status == 0 %}
    <span class="badge badge-primary">Créée</span>
{% elseif status == 1 %}
    <span class="badge badge-success">Ouverte</span>
{% elseif status == 2 %}
    <span class="badge badge-warning">Clôturée</span>
{% elseif status == 3 %}
    <span class="badge badge-warning">En cours</span>
{% elseif status == 4 %}
    <span class="badge badge-secondary">Passée</span>
{% elseif status == 5 %}
    <span class="badge badge-danger">Annulée</span>
{% else %}
    <span class="badge badge-danger">Inconnue</span>
{% endif %}